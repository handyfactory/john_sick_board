<h1>처음페이지</h1>

<table>
    <tr>
        <th>제목<th>
        <th>내용</th>
        <th>보러가기</th>
    </tr>
    <% @posts.each do |post| %>
        <tr>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><a href="/posts/<%=post.id%>">보기</a></td>
        </tr>
    <% end %>
</table>